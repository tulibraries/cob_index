#!/usr/bin/env bash


# This script is used to load data into the Sorl instance.
# However, sometimes Solr is still loading and we need to wait until it's done
# before we can begin.

if [[ "$CI" == true ]]; then

  cd solr/configs/tul_cob-catalog-solr
  zip -r "$HOME/solrconfig.zip" . \
    -x "spec/*" \
    -x ".git/*" \
    -x ".github/*" \
    -x "Gemfile*" \
    -x "Makefile" \
    -x "docker-compose.yml" \
    -x "README.md" \
    -x "bin/*"
  cd -


  curl -s -u "${SOLR_USER}:${SOLR_PASSWORD}" \
  -X POST \
  --header "Content-Type: application/octet-stream" \
  --data-binary @"$HOME/solrconfig.zip" \
  "$SOLR_HOST/admin/configs?action=UPLOAD&name=tul_cob-catalog-solr&wt=json"

  echo
    echo "***"
    echo "* Create blacklight collection"
    echo "***"
    RESP=$(curl -sSf -u "${SOLR_USER}:${SOLR_PASSWORD}" \
      "$SOLR_HOST/admin/collections?action=CREATE&name=blacklight&collection.configName=tul_cob-catalog-solr&numShards=1&replicationFactor=1&wt=json" \
      || echo "Collection may already exist")
    echo $RESP
fi

while [[ "$STATUS" != "200" ]]; do
  echo "waiting for setup to complete or equal 200."
  echo "currently: $STATUS"
  sleep 2
  STATUS=$(curl -s -o /dev/null -w "%{http_code}" \
    "$SOLR_URL")
done

echo $SOLR_URL
echo $RELEVANCY_FIXTURES_PATH plus
find $RELEVANCY_FIXTURES_PATH -type f -name '*.xml'  -exec bundle exec cob_index ingest '{}' \;

bundle exec cob_index commit
